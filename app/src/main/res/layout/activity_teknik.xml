<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.TeknikActivity">
    <LinearLayout
        android:id="@+id/llTool"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/gradiant"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_weight="0.1"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="0.8"
            android:gravity="end"
            android:text="Gerakan"
            android:textAppearance="@style/TextAppearance.Bold20"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            android:layout_weight="0.1"
            android:rotationY="180"
            android:src="@drawable/ic_baseline_accessibility_new_24"
            android:layout_marginRight="8dp" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageGerakan"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_below="@id/llTool"
        tools:src="@drawable/foto1"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivVideo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/imageGerakan"
        android:src="@drawable/videoicon"
        android:layout_marginStart="270dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="270dp" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvDesc"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        android:layout_below="@id/ivVideo"
        android:textAppearance="@style/TextAppearance.Normal12"/>

</RelativeLayout>